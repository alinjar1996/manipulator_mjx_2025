import jax
from jax import numpy as jnp
import matplotlib.pyplot as plt
import numpy as np

def sample_velocities(n_joints, n_steps):
    mean = np.zeros(n_joints)
    cov = [[1, 0], [0, 100]]
    x, y = np.random.multivariate_normal(mean, cov, 10)
    # traj = np.random.multivariate_normal()
    return (x, y)

def main():
    n_joints = 7
    n_steps = 50
    
    # sample_velocities_ = jax.vmap(sample_velocities, in_axes=(0))
    # trajectory = sample_velocities_(n_joints, n_steps)
    trajectory = sample_velocities(n_joints, n_steps)

    # print(trajectory.shape)
    print(trajectory)

    plt.plot(trajectory[0], trajectory[1], 'x')
    plt.axis('equal')
    plt.show()

    # plt.plot(trajectory)
    # plt.show()
    

if __name__ == "__main__":
    main()